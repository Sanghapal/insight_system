$(document).ready ->
  alert('hello')
  $('#submit_question').attr('disabled', true)
  hideCheck_one = $('#question_options_attributes_0_option_right')
  hideCheck_two = $('#question_options_attributes_1_option_right')
  hideCheck_three = $('#question_options_attributes_2_option_right')
  hideCheck_four = $('#question_options_attributes_3_option_right')
  hideCheck_five = $('#question_options_attributes_4_option_right')
  hideCheck_one.change ->
    if hideCheck_one.is(':checked')
      $('#submit_question').attr('disabled', false)
      hideCheck_two.attr('Disabled', true)
      hideCheck_three.attr('disabled', true)
      hideCheck_four.attr('disabled', true)
      hideCheck_five.attr('disabled', true)
    else
      $('#submit_question').attr('disabled', true)
      hideCheck_two.attr('disabled', false)
      hideCheck_three.attr('disabled', false)
      hideCheck_four.attr('disabled', false)
      hideCheck_five.attr('disabled', false)
  hideCheck_two.change ->
    if hideCheck_two.is(':checked')
      $('#submit_question').attr('disabled', false)
      hideCheck_one.attr('Disabled', true)
      hideCheck_three.attr('disabled', true)
      hideCheck_four.attr('disabled', true)
      hideCheck_five.attr('disabled', true)
    else
      $('#submit_question').attr('disabled', true)
      hideCheck_one.attr('disabled', false)
      hideCheck_three.attr('disabled', false)
      hideCheck_four.attr('disabled', false)
      hideCheck_five.attr('disabled', false)
  hideCheck_three.change ->
    if hideCheck_three.is(':checked')
      $('#submit_question').attr('disabled', false)
      hideCheck_one.attr('Disabled', true)
      hideCheck_two.attr('disabled', true)
      hideCheck_four.attr('disabled', true)
      hideCheck_five.attr('disabled', true)
    else
      $('#submit_question').attr('disabled', true)
      hideCheck_one.attr('disabled', false)
      hideCheck_two.attr('disabled', false)
      hideCheck_four.attr('disabled', false)
      hideCheck_five.attr('disabled', false)
  hideCheck_four.change ->
    if hideCheck_four.is(':checked')
      $('#submit_question').attr('disabled', false)
      hideCheck_one.attr('Disabled', true)
      hideCheck_two.attr('disabled', true)
      hideCheck_three.attr('disabled', true)
      hideCheck_five.attr('disabled', true)
    else
      $('#submit_question').attr('disabled', true)
      hideCheck_one.attr('disabled', false)
      hideCheck_two.attr('disabled', false)
      hideCheck_three.attr('disabled', false)
      hideCheck_five.attr('disabled', false)
  hideCheck_five.change ->
    if hideCheck_five.is(':checked')
      $('#submit_question').attr('disabled', false)
      hideCheck_one.attr('Disabled', true)
      hideCheck_two.attr('disabled', true)
      hideCheck_three.attr('disabled', true)
      hideCheck_four.attr('disabled', true)
    else
      $('#submit_question').attr('disabled', true)
      hideCheck_one.attr('disabled', false)
      hideCheck_two.attr('disabled', false)
      hideCheck_three.attr('disabled', false)
      hideCheck_five.attr('disabled', false)
