- content_for :javascript do
  = javascript_include_tag 'enquiries'
= simple_nested_form_for @enquiry, :html => { :multipart => true} do |f|
  = f.error_notification
  .form-inputs
    = f.input :first_name
    = f.input :middle_name
    = f.input :last_name 
    = f.input :mobile
    = f.input :address_line1
    = f.input :address_line2
    = f.association :state, :collection => State.find(:all, :order => "name ASC"), :prompt => "Select state" 
    = f.association :city, :collection => City.find(:all, :order => "name ASC"), :prompt => "Select City"

    = f.input :zip_code
    = f.input :enquierd_for, :as => :text, :input_html => {:cols => 20, :rows => 5}, :label => "Enquire for"

  .form-actions
    = f.button :submit
    = link_to '<button type="button">Cancel</button>'.html_safe, enquiries_path



  
