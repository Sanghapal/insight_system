= simple_form_for ([@grade, @batch])  do |f|
  = f.error_notification

  .form-inputs
  %fieldset
    = f.input :title, :label => 'Batch Title'
    = f.hidden_field :grade_id
    = f.input :starte_date, :label => "Start Date", :as => :datepicker, :readonly => true
    = f.input :end_date, :as => :datepicker, :readonly => true
 
    = f.input :from_time, as: :Time
    = f.input :end_time, as: :Time
    =f.input :deys_of_week, collection: ['Monday, Wednesday, Friday.', 'Tuesday, Thursday, Saturday', 'Monday to Friday '], as: :radio_buttons
  .form-actions
    = f.button :submit
