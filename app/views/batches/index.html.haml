- content_for :javascript do
  = javascript_include_tag 'batch'
%h1 Showing batches
= form_tag multipledelete_grade_batches_path, method: :delete do

  %table.table
    %tr
      %th Select Batches
      %th Batch Title
      %th
      %th
    - @batches.each do |batch|
      %tr
        %td= check_box_tag "batches[]", batch.id
        %td= batch.title
        %td= link_to 'Assign Batch To Student', assignbatch_path(@grade, batch)
        = link_to 'Assign trainers', assigntrainers_path(batch)

      - if batch.students.size != 0
        %td= link_to "Create new session", new_batch_lecture_path(batch)
        %td= link_to "Generate test report", new_batch_exam_path(batch)

      - else
  = submit_tag "Delete multiple batches"
  = link_to '<button type="button">New Batch</button>'.html_safe, new_grade_batch_path
